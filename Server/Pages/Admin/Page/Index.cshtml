@page
@model Server.Pages.Admin.Page.IndexModel
@{
    var pageTitle =
        Resources.PageTitles.Index;

    ViewData["PageTitle"] = pageTitle;
}

<div class="row">
    <div class="col table-responsive">
        <table class="table table-bordered table-sm table-striped table-hover">
            <caption>Directories</caption>

            <thead class="table-primary">
            <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    
                </th>
                <th scope="col">
                    Contents
                </th>
                <th scope="col">
                    Attributes
                </th>
                <th scope="col">
                    Creation Time
                </th>
                <th scope="col">
                    Last Write Time
                </th>
                <th scope="col">
                    Last Access Time
                </th>
            </tr>
            </thead>

            <tbody>
            @for (var index = 0; index <= Model.ViewModel.Items.Count - 1; index++)
            {
                var item = Model.ViewModel.Items[index];

                <tr>
                    <th scope="row">
                        @(index + 1)
                    </th>
                    <td>
                        @(item.Title)
                    </td>
                    <td>
                        @(item.Author)
                    </td>
                    <td>
                            @if (item.IsActive){
                                <i class="bi bi-check"></i>
                            }
                            else
                            {
                                <i class="bi bi-x"></i>
                            }
                        </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">@(Resources.PageTitles.UpdatePage)</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">@(Resources.PageTitles.PageDetails)</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">@(Resources.PageTitles.DeletePage)</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
